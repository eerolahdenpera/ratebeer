<h2>Best breweries</h2>
<table class="table">
  <thead>
  <th></th>
  <th>average</th>
  </thead>
  <tbody>
  <% @top_breweries.each do |brewery| %>
  <tr>
    <td><%= link_to brewery.name, brewery %></td>
    <td><%= brewery.average_rating.round(2) %></td>
  </tr>
      <% end %>
  </tbody>
</table>


<h2>Best beers</h2>
  <table class="table">
    <thead>
    <th></th>
    <th>average</th>
    </thead>
    <tbody>
    <% @top_beers.each do |beer| %>
        <tr>
          <td><%= link_to beer.name, beer %></td>
          <td><%= beer.average_rating.round(2) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

<h2>Most active users</h2>
<table class="table">
  <thead>
  <tr>
    <th>Name</th>
    <th>Favorite beer</th>
    <th>Number of ratings</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
    <% @top_raters.first(3).each do |rater| %>
    <tr>
      <td><%= rater.username %></td>
      <td><%= rater.favorite_beer %></td>
      <td><%= rater.number_of_ratings %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<p>Recent ratings</p>

<ul>
  <% @recent.each do |r| %>
  <li>
    <%= r.to_s %>
    -<%= link_to r.user.username, r.user %>
  </li>
      <% end %>
</ul>

<%= link_to 'New Rating', new_rating_path, class:'btn btn-primary' %>
