<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %> <%= @beer_club.city %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<h2>Members</h2>
<% if @beer_club.memberships.empty? %>
    <p>No members.</p>
<% else %>
    <ul>
      <% @beer_club.memberships.each do |membership| %>
          <li><%= link_to membership.user.username, membership %></li>
      <% end %>
    </ul>
<% end %>

<% if current_user %>

    <% if @membership.user_id.nil? %>

        <%= form_for(@membership) do |f| %>
            <%= f.hidden_field :beer_club_id %>
            <%= f.submit value:"Join the club" %>
        <% end %>
    <% else %>
        <%= form_for(@membership, method: "delete") do |f| %>
            <%= f.hidden_field :beer_club_id %>
            <%= f.submit value: "end the membership" %>
        <% end %>
    <% end %>
    <br>
    <%= link_to 'Edit', edit_beer_club_path(@beer_club) %>
    <%= link_to 'Destroy the club', @beer_club, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
